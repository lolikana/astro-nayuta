---
import type { TCafeMenu } from '@libs/types';

const { class: category__dish } = Astro.props;
const { options } = Astro.props as TCafeMenu['categories'][number]['menus'][number];
---

<ul class="options">
	{
		options!.map(option => (
			<li class="option">
				<div class:list={[category__dish, 'option__div']}>
					<span>{option.name}</span>
					{option.price && (
						<span>
							{`...${
								option.type && option.type === 'add' ? '＋' : 'ー'
							} ¥${option.price.toLocaleString()}`}
						</span>
					)}
				</div>
			</li>
		))
	}
</ul>

<style lang="scss">
	@import '@styles/config';

	.options {
		margin: 10px 0;
	}

	.option__div {
		span:first-child {
			width: 80%;
		}
	}
</style>
