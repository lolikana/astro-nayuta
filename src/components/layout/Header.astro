---
import NayutaLogo from '@assets/logo/nayuta__logo.svg';
import { Image } from 'astro:assets';

import Navbar from './Navbar.astro';
---

<header class="header">
	<div class="header__logo">
		<a href={`${import.meta.env.PROD ? '/astro-nayuta' : ''}/`}>
			<Image src={NayutaLogo} alt="logo nayuta" width={60} height={26} />
		</a>
	</div>
	<div class="header__nav">
		<Navbar />
	</div>
</header>

<style lang="scss">
	@import '@styles/config';

	.header {
		z-index: 1000;
		position: relative;
		width: $__full__width;
		height: $__mobile__headerHeight;
		padding-top: 1rem;
		margin-bottom: $__header__paddingBottom;

		background: linear-gradient(
			180deg,
			rgba(255, 255, 255, 1) 0%,
			rgba(255, 255, 255, 0.4864320728291317) 50%,
			rgba(255, 255, 255, 0) 100%
		);
	}

	.header__logo {
		img {
			margin: 0 auto;
			width: 60px;
			height: 26px;
		}

		@include mq(md) {
			padding-left: $__desktop__padding;
		}
	}

	.header__nav {
		width: $__full__width;
		height: 65px;
		padding: 0 5%;
		display: flex;
		align-items: center;

		@include mq(sm) {
			padding: 0 $__mobile__padding;
		}

		@include mq(md) {
			width: fit-content;
			padding: 0 48px 0 0;
		}
	}

	.header__nav.sticky {
		min-width: 375px;
		position: fixed;
		top: 0;
		background: linear-gradient(
			180deg,
			rgba(255, 255, 255, 1) 0%,
			rgba(255, 255, 255, 0.4864320728291317) 50%,
			rgba(255, 255, 255, 0) 100%
		);

		@include mq(md) {
			position: relative;
			background: transparent;
		}
	}

	@include mq(md) {
		.header {
			position: fixed;
			height: $__desktop__headerHeight;
			top: 0;

			display: flex;
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
			padding-top: 0;
		}
	}
</style>
