---
import type { TFloorMapData } from './types';

const { details } = Astro.props as TFloorMapData;
---

{
	details.map(detail => (
		<li class="detail">
			<div class="detail__number medium-text">{detail.number}</div>
			<a href={detail.link} class="detail__link link-border">
				<div class="detail__icon">
					<img src={`/icons/${detail.icon}__icon.svg`} alt={`icon of ${detail.icon}`} />
				</div>
				<div class="detail__text">
					<p class="detail__text_ja small-text">{detail.text.ja}</p>
					<p class="detail__text_en medium-text">{detail.text.en}</p>
				</div>
				<div class="detail__arrow" />
			</a>
		</li>
	))
}

<style lang="scss">
	@import '@styles/colors';
	@import '@styles/fonts';
	@import '@styles/utils/variables';
	@import '@styles/utils/mixins';

	.detail,
	.detail__link {
		display: flex;
		align-items: center;
	}

	.detail {
		position: relative;
		width: 100%;
		height: 35px;
		gap: 0.25rem;
	}

	.detail__link {
		flex: 1;
		padding: 0.5rem 1rem;
		gap: 1.125rem;
	}

	.detail__number {
		width: 22px;
		height: 22px;
		line-height: 20px;
		font-weight: $__bold;
		color: $__sub;
		background-color: $__main;
		border-radius: 50%;
		text-align: center;
		padding-left: 1px;
	}

	.detail__icon {
		width: 28px;
	}

	.detail__text {
		text-align: left;
		line-height: 1.2rem;
	}

	.detail__arrow {
		background: url('/icons/chevron_right_FILL0_wght400_GRAD0_opsz48.svg') no-repeat;
		position: relative;
		margin-left: auto;
		right: 1rem;
		background-size: 25px 25px;
		width: 25px;
		height: 25px;
	}

	@include mq(md) {
		.detail {
			max-width: 425px;
			height: 43px;
			gap: 2%;
		}

		.detail__number {
			width: 35px;
			height: 35px;
			line-height: 33px;
			font-size: 1.25rem;
		}

		.detail__icon {
			min-width: 40px;

			img {
				width: fit-content;
				height: fit-content;
				margin: 0 auto;
			}
		}

		.detail__text_ja {
			font-size: $__font12;
		}

		.detail__text_en {
			font-size: $__font18;
		}

		.detail__arrow {
			right: 0;
		}
	}
</style>
